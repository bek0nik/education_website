<%= form_for @comment do |f| %>
  <fieldset>
  <legend>Изменение комментария</legend>
    <div class="control-group">
      <%= f.label :comment_text, "Текст" %>
      <div class="controls">
        <%= f.text_area :comment_text, :cols => 10, :rows => 10 %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Сохранить", :class => "btn btn-primary" %>
      
    </div>
  </fieldset>
  
<% end %>
