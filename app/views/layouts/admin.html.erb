<!DOCTYPE html>
<html>
<head>
  <title>EducationWebsite</title>
  <%= stylesheet_link_tag    "admin", :media => "all" %>
  <%= javascript_include_tag "admin" %>
  <%=javascript_include_tag :defaults,"nested_form"%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Админка', admin_path, :class => 'brand'  %>
      <div class="nav-collapse in">
        <ul class="nav">
          <li><%= link_to 'Тесты', admin_test_names_path  %></li>
          <li><%= link_to 'Вопросы', admin_questions_path  %></li>
          <li><%= link_to 'ВУЗЫ', admin_universities_path %></li>
          <li><%= link_to 'Специальности', admin_specialities_path %></li>
          <li><%= link_to 'Категории', admin_categories_path  %></li>
          <li><%= link_to "Комментарии", admin_comments_path %></li>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
        </ul>  
      </div>
    </div>
  </div>
</div> 
  <div class="container">
    <div class="row">
      <div class="span1">
        <ul class="nav" id="locale">
        <li><%= link_to_unless_current image_tag('ru.png', :size => "29x24"), :locale => "ru" %></li>
        <li><%= link_to_unless_current image_tag('kz.png', :size => "29x24"), :locale => "kz"  %></li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <%= flash_msg(flash[:notice]) %>
        <%= yield %>
      </div>
    </div>
  <div class="row">
    <div class="span12"><address>Copyright 2012</address></div>
  </div>
  </div>

</body>
</html>
