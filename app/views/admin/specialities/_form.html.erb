<%= form_for([:admin,@speciality]) do |f| %>
  <fieldset>
    <legend><%= @speciality.legend_value %></legend>
    <div class="control-group">
      <%= f.label :name, "Название" %>
      <div class="controls"><%= f.text_field :name %></div>
    </div>
    
    <div class="control-group">
      <%= f.label :description, "Описание"  %>
      <div class="controls"><%= f.text_area :description %></div>
    </div>
    <div class="form-actions">
      <%= f.submit @speciality.button_value %>
    </div>
    
  </fieldset>
<% end %>
