<%= link_to 'Добавить', new_admin_category_path, :class => 'btn' %>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |c| %>
    <tr>
      <td><%= c.name %></td>
      <td>
        <%= link_to edit_icon, edit_admin_category_path(c) %>
        <%= link_to delete_icon, admin_category_path(c), method: :delete, confirm: "Вы уверены?" %>
      </td>
    </tr>
  </tbody>

  
  
<% end %>
</table>
