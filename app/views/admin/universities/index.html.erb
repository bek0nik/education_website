<%= link_to 'Добавить ВУЗ', new_admin_university_path, :class => 'btn' %> <br/>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
  <% @universities.each do |u| %>
    <tr>
      <td><%= u.name %></td>
      <td><%= u.description %></td>
      <td>
        <div class="actions">
          <%= link_to edit_icon, edit_admin_university_path(u) %>
          <%= link_to delete_icon, admin_university_path(u), :method => :delete %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


  

