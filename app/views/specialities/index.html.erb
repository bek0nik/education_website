<div id="speciality-index">
<%= form_tag(specialities_path, :method => 'get', :id => 'specialities_search')  do %>
  
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= hidden_field_tag :direction, params[:direction] %>
  
  <%= text_field_tag :search, params[:search], :placeholder => "Поиск ...", :class => "span3" %>
 
<div id="speciality">
  <%= render 'specialities' %>
</div>
<% end %>


</div>
