<% flash.each do |name, msg| %>
  <%= msg %>
<% end %>
<div id="registration">
<%= form_for(@user, :id => "signup") do |f| %>
  
  <div class="field">
  <%= f.label :email, "Почтовый адрес" %>
  <%= f.text_field :email %>
  </div>
  
  <div class="field">
  <%= f.label :password, "Пароль" %>
  <%= f.password_field :password %>
  </div>
  
  <div class="field">
  <%= f.label :password_confirmation, "Подтвердите пароль" %>
  <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
</div>
